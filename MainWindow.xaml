<Window x:Class="SphereTexturing_ComputerGraphics1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SphereTexturing_ComputerGraphics1"
        mc:Ignorable="d"
        Title="Sphere Texturing - Rafał Ziomek" Height="450" Width="800">
    <Grid>
        <Canvas Name ="SceneCanvas" Width="{Binding ActualWidth, ElementName=SceneImage}" Height="{Binding ActualHeight, ElementName=SceneImage}" MouseLeftButtonDown="LeftClick" MouseRightButtonDown="RightClick">
            <Canvas.Background>
                <VisualBrush  >
                    <VisualBrush.Visual>
                        <Image x:Name="SceneImage"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Canvas.Background>
        </Canvas>
    </Grid>
</Window>
